{
    "name": "iswai/devops",
    "type": "project",
    "description": "DevOps commands to make your life easier.",
    "keywords": [
        "DevOps",
        "GitHub",
        "pull requests"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Geert Eltink",
            "email": "geert.eltink@gmail.com"
        }
    ],
    "require": {
        "beberlei/assert": "^3.2",
        "ocramius/package-versions": "^1.5",
        "symfony/console": "^4.3",
        "symfony/process": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "zendframework/zend-coding-standard": "dev-feature/psr-12"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Iswai\\DevOps\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IswaiTest\\DevOps\\": "test/"
        }
    },
    "repositories": {
        "zend-coding-standard": {
            "type": "vcs",
            "url": "git@github.com:geerteltink/zend-coding-standard.git"
        }
    },
    "bin": [
        "bin/devops"
    ],
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs -p",
        "cs-fix": "phpcbf -p",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "support": {
        "issues": "https://github.com/iswai/devops/issues",
        "source": "https://github.com/iswai/devops",
        "rss": "https://github.com/phly/iswai/devops/releases.atom"
    }
}
